#!/bin/sh

set -e

BUILD_DIR=$1
CACHE_DIR=$2

# config
# VERSION="2.1.1"
VERSION="1.9.7"

# Buildpack URL
ARCHIVE_NAME=phantomjs-${VERSION}-linux-x86_64
FILE_NAME=${ARCHIVE_NAME}.tar.bz2
BUILDPACK_PHANTOMJS_PACKAGE=https://s3-us-west-2.amazonaws.com/five9code/phantomjs/${FILE_NAME}

mkdir -p $CACHE_DIR
if ! [ -e $CACHE_DIR/$FILE_NAME ]; then
  echo "-----> Fetching PhantomJS ${VERSION} binaries at ${BUILDPACK_PHANTOMJS_PACKAGE}"
  curl -v $BUILDPACK_PHANTOMJS_PACKAGE -L -s -o $CACHE_DIR/$FILE_NAME
fi

echo "-----> Extracting PhantomJS ${VERSION} binaries to ${BUILD_DIR}/vendor/phantomjs"
mkdir -p $CACHE_DIR/$ARCHIVE_NAME
mkdir -p $BUILD_DIR/vendor
tar jxf $CACHE_DIR/$FILE_NAME -C $CACHE_DIR
mv $CACHE_DIR/$ARCHIVE_NAME $BUILD_DIR/vendor/phantomjs

echo "-----> Building runtime environment"
mkdir -p $BUILD_DIR/.profile.d
echo "export PATH=\"\$PATH:\$HOME/app/vendor/phantomjs/bin\"; export LD_LIBRARY_PATH=\"\$LD_LIBRARY_PATH:\$HOME/app/vendor/phantomjs/lib\";" > $BUILD_DIR/.profile.d/phantomjs.sh
chmod 755 $BUILD_DIR/.profile.d/phantomjs.sh
